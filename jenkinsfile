pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                   
                    bat 'npm install'
                }
            }
        }

        stage('Run Cypress Tests') {
            steps {
                script {
                  
                    bat 'npx cypress run'
                    archiveArtifacts artifacts: 'rapports/*', allowEmptyArchive: true
                }
            }
        }
    }

    post {
        always {
            script {
               
                echo 'fin'
            }
        }
    }
}
