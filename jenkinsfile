pipeline {
    agent any  // Déclarez un agent pour que le pipeline ait un nœud d'exécution

    stages {
        stage('Install Dependencies') {
            steps {
                node {
                    // Installation des dépendances avec npm
                    sh 'npm ci'
                }
            }
        }

        stage('Run Cypress Tests') {
            steps {
                node {
                    // Lancer les tests Cypress
                    sh 'npx cypress run'
                }
            }
        }

        stage('Generate Cucumber Report') {
            steps {
                node {
                    // Exécution du script Node.js pour générer un rapport Cucumber
                    sh 'node cucumber-report-generator.js' 
                }
            }
        }
    }

    post {
        always {
            // Publier le rapport Cucumber après l'exécution des tests
            cucumber buildStatus: 'UNSTABLE',
                    failedFeaturesNumber: 1,
                    failedScenariosNumber: 1,
                    skippedStepsNumber: 1,
                    failedStepsNumber: 1,
                    classifications: [
                            [key: 'Commit', value: '<a href="${GERRIT_CHANGE_URL}">${GERRIT_PATCHSET_REVISION}</a>'],
                            [key: 'Submitter', value: '${GERRIT_PATCHSET_UPLOADER_NAME}']
                    ],
                    reportTitle: 'Cucumber Test Report',  // Titre du rapport
                    fileIncludePattern: '**/cypress/results/test.cucumber.json',  // Modèle de fichier JSON généré
                    sortingMethod: 'ALPHABETICAL',  // Méthode de tri des résultats
                    trendsLimit: 100  // Limite des résultats à afficher
        }
    }
}
