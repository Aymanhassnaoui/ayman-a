pipeline {
    agent {
        docker {
            image 'cypress/browsers'
        }
    }

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                   
                    sh 'npm ci'

                    
                }
            }
        }

        stage('Run Cypress Tests') {
            steps {
                script {
                  
                    sh 'npx cypress run'
                     
                }
            }
        }

        stage('generer rapport ') {
            steps {
                script { 
                    sh 'node cucumber-report-generator.js' 
                }
            }
        }
    }

    post {
    always {
        cucumber buildStatus: 'UNSTABLE',
                reportTitle: 'my repport',
                fileIncludePattern: '**/cypress/cucumber-json/test.cucumber.json',  
                sortingMethod: 'ALPHABETICAL',
                trendsLimit: 100
    }
}
}
