pipeline {
    agent {
        // Utilisation de Docker pour exécuter Cypress avec les navigateurs nécessaires
        docker {
            image 'cypress/browsers'
    
        }
    }

    environment {
    REPO_PATH='/home/manish/Desktop'
    APP_NAME='test'
    MY_FUN = load 'testfun.groovy'
}

    stages {
        stage('Install dependencies') {
            steps {
                // Installation des dépendances avec npm ci
                sh 'npm ci'
            }
        }

        stage('Run Cypress Tests') {
            steps {
                // Exécution des tests Cypress avec le préprocesseur Cucumber
                sh "npm run cy:run"
            }
        }
    }

    post {
        always {
            // Utilisation de Cucumber pour générer un rapport à partir du fichier JSON
            cucumber buildStatus: 'UNSTABLE',
                    failedFeaturesNumber: 1,
                    failedScenariosNumber: 1,
                    skippedStepsNumber: 1,
                    failedStepsNumber: 1,
                    classifications: [
                            [key: 'Commit', value: '<a href="${GERRIT_CHANGE_URL}">${GERRIT_PATCHSET_REVISION}</a>'],
                            [key: 'Submitter', value: '${GERRIT_PATCHSET_UPLOADER_NAME}']
                    ],
                    reportTitle: 'Cypress Cucumber Report',
                    fileIncludePattern: '**/*.cucumber.json',
                    sortingMethod: 'ALPHABETICAL',
                    trendsLimit: 100
        }
    }
}
