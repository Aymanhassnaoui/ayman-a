pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                   
                    bat 'npm install'
                    
                }
            }
        }

        stage('Run Cypress Tests') {
            steps {
                script {
                  
                    bat 'npx cypress run'
                     bat 'dir'
                    
                }
            }
        }
    }

    post {
        always {
            script {
               
                echo 'fin'
                archiveArtifacts artifacts: 'rapports\index.html', allowEmptyArchive: true
            }
        }
    }
}
